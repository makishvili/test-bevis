.select {
    position: relative;
    display: inline-block;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    outline: none;
    overflow: hidden;
    margin: 0;
    padding: 5px 10px;
    background: #eee;
    box-shadow: 0 3px 0 0 #616161, 0 3px 20px rgba(0,0,0,0.25);
    color: #333;
}
