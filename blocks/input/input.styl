.input {
    margin: 0 3px;
    display: inline-block;
    height: 28px;
    padding: 0 30px 0 3px;
    border: 1px ridge rgba(0,0,0,0.2);
    outline: none;
    box-sizing: border-box;
    background: #fff;

    &__control{
        width 100%
        height 100%
        border none
        padding 0
        margin 0
        outline none
    }
}
