.error-message {
    position: relative;
    margin: 0;
    line-height: 16px;
    z-index: 100;

    margin-top: 10px;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    background: #ffeede;
    text-align: left;
    color: #000;

    &__title {
        font-size: 130%;
        margin: 10px 0;
    }

    &__msg {
        color: red;
        margin-top: 5px;

        font-size: 110%;
    }

    &__msg-line {
        margin-top: 5px;
    }

    &__stack {
        margin: 10px 0 0 30px;
    }

    &__stack-line {
        margin-top: 5px;
        white-space: nowrap;
    }

    &__advice {
        margin-top: 25px;

        &-code {
            border: 1px solid #999;
            padding: 10px;
            background: #f9f9f9;
            font-family: Monaco, "Consolas", "Courier New", monospace;
            line-height: 20px;
        }
    }

    &__close {
        position: absolute;
        right: 10px;
        top: 10px;

        color: red;
        text-decoration: underline;
        cursor: pointer;
    }
}
